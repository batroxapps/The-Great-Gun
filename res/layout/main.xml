<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<Button android:id="@+id/menu_btn_new"
		android:layout_width="200px"
		android:layout_height="wrap_content"
		android:text="@string/btn_new" />	

<Button android:id="@+id/menu_btn_continue"
		android:layout_width="200px"
		android:layout_height="wrap_content"
		android:text="@string/btn_continue" />
		
<Button android:id="@+id/menu_btn_tutorial"
		android:layout_width="200px"
		android:layout_height="wrap_content"
		android:text="@string/btn_tutorial" />

<Button android:id="@+id/menu_btn_options"
		android:layout_width="200px"
		android:layout_height="wrap_content"
		android:text="@string/btn_options" />
		
<Button android:id="@+id/menu_btn_credits"
		android:layout_width="200px"
		android:layout_height="wrap_content"
		android:text="@string/btn_credits" />

</LinearLayout>

